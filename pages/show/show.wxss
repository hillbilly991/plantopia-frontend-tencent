.card-trip {
  overflow: hidden;
  background: white;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
  
}

image {
  height: 500px;
  width: 100%;
  object-fit: cover;
}

.card-trip .h2 {
  font-size: 24px;
  font-weight: bold;
  margin: 0;
}

.card-trip .p {
  font-size: 12px;
  opacity: .7;
  margin: 0;
}


.card-trip .card-trip-infos {
  padding: 16px;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  position: relative;
  flex-direction: column;
}

.card-trip-infos .card-trip-user {
  position: absolute;
  right: 16px;
  top: -20px;
  width: 40px;
}

.button-area {
  margin:10px auto;
}
 