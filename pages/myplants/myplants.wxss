.fa-baby-carriage {
  color:#1CE2A7;
  font-size:24px;
  margin-left:20px;
}
.plusaplant {
  display:flex;
  justify-content: center;
  align-items: center
}
.plus {
  height:200px;
}
.header {
  height:60px;
  border-bottom: 1px dotted rgb(200,200,200);
  display:flex;
  justify-content: center;
  align-items: center;
  font-weight:medium;
  background-color: white;
  
}
.header-bar {
  color:black;
}
.container {
  height:100vh;
  width:100%;
  justify-content: space-evenly;
  display:grid;
  grid-template-columns: 40vw 40vw;
  grid-gap: 8px;
  background-color: white;
  padding-top:15px;
}
.cards {
  background-size: cover;
  box-shadow: 0 0 10px rgb(0,0,0,0.1);
  border-radius:8px;
  font-weight: bold;


}

.cards image {
  max-width: 40vw;
  max-height: 40vw;
  border-top-left-radius:8px;
  border-top-right-radius:8px;
}

.card-trip-infos{
 display: flex;
  justify-content: space-evenly;
  align-items: flex-end;
  background-color: white;
  height:100%;
}

